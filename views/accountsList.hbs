<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />

    <title>Accounts Lists</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />

    <script
      src="https://kit.fontawesome.com/299859a3b1.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="container-fluid w-50 mt-4">
      {{#if data}}
        <h3 class="text-info text-center">{{header}}</h3>

        <table class="table table-striped border">
          <thead class="text-center">
            <tr class="table-secondary">
              <th>Account ID</th>
              <th>Account Name</th>
              <th>Email</th>
              <th colspan="2">Actions</th>
            </tr>
          </thead>

          <tbody>
            {{#each data}}
              <tr>
                <td class="text-center">{{this.account_id}}</td>
                <td>{{this.first_name}} {{last_name}}</td>
                <td>{{this.email}}</td>

                <td>
                  <a
                    class="btn bg-info p-2"
                    href="/register/edit/{{this.email}}"
                  >
                    <i class="fa-regular fa-pen-to-square"></i>
                  </a>
                </td>

                <td>
                  <a
                    class="btn bg-danger text-white p-2"
                    href="/register/delete/{{this.email}}"
                  >
                    <i class="fa-regular fa-trash-can"></i>
                  </a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      {{/if}}
    </div>

    <div class="container mt-5">
      <p>Click <a href="/register/skillset">here</a> to see skill set</p>
     
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
      crossorigin="anonymous"
    ></script>
  </body>
</html>